            Price = 3.5,
            Qty = 3,
            Created = DateTime.Now
        },
                new Product
        {
            Id = 3,
            Name = "PPL",
            Photo = "327308453_917558602598567_2671577435100712797_n.jpg",
            Price = 4.5,
            Qty = 4,
            Created = DateTime.Now
        },
                new Product
        {
