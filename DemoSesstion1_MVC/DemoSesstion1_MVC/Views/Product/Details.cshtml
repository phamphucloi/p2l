<a asp-controller="product" asp-action="index">Back</a>

<h3>Product Details</h3>

<table border="1">
    <tr>
        <th>ID</th>
        <td>@ViewBag.product.Id</td>
    </tr>

    <tr>
        <th>Name</th>
        <td>@ViewBag.product.Name</td>
    </tr>

    <tr>
        <th>Price</th>
        <td>@ViewBag.product.Price</td>
    </tr>

    <tr>
        <th>Quantity</th>
        <td>@ViewBag.product.Qty</td>vn
    </tr>

    <tr>
        <th>Photo</th>
        <td><img src="~/imgs/@ViewBag.product.Photo" width="300" height="300" /></td>
    </tr>

    <tr>
        <th>Created at</th>
        <td>@ViewBag.product.Created.ToString("yyyy-MM-dd") PM</td>
    </tr>
</table>