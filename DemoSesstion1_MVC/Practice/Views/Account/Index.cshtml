<form method="post" asp-controller="account" asp-action="login">
    <table>
        <tr>
            <td>
                UserName :
            </td>

            <td>
                <input type="text" name="username" />
            </td>
        </tr>

        <tr>
            <td>
                Password :
            </td>

            <td>
                <input type="password" name="password" />
            </td>
        </tr>

        <tr>
            <td>
                <input type="submit" value="Login" />
            </td>
                @ViewBag.mess
        </tr>

    </table>
</form>